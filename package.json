{
  "name": "the-flying-pupo",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "the-flying-pupo",
  "author": "PupoSDC",
  "engines": {
    "node": ">=18.x",
    "npm": ">9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "npx ts-node scripts/compileRecords.ts",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier \"(src|app|records)/**/*.+(ts|js|tsx|css)\" --write",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@picocss/pico": "^1.5.10",
    "axios": "^1.4.0",
    "leaflet": "^1.9.4",
    "leaflet-rotatedmarker": "^0.2.0",
    "next": "^13.4.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-leaflet": "^4.2.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/leaflet": "^1.9.3",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "7.0.4",
    "jest": "^29.6.1",
    "lint-staged": "12.1.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "importOrderParserPlugins": [
      "classProperties",
      "typescript",
      "jsx"
    ],
    "importOrderSortSpecifiers": true,
    "importOrder": [
      "^react(.*)",
      "^next(.*)",
      "^@react(.*)",
      "^@fontsource(.*)",
      "^@mui(.*)",
      "^@fullcalendar/react",
      "^@widu(.*)",
      "^[./]"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "bash -c tsc",
    "*.{ts,tsx}": "eslint --fix --max-warnings=0",
    "src/**/*{ts,tsx,js,jsx,mdx,md,json,css,html}": "prettier --write"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "react/display-name": "off"
    }
  },
  "eslintIgnore": [
    "**/{__tests__,__stories__,__mocks__}/**",
    "**/*.{test,spec,stories,example}.{js,jsx,ts,tsx}"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
